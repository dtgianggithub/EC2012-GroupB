@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center_content">
    <section class="container_login">
        <div class="login">
            <h1>Đăng nhập</h1>
            <form method="post" action="index.html">
                <p><input type="text" name="login" value="" placeholder="Tên đăng nhập"></p>
                <p><input type="password" name="password" value="" placeholder="Mật khẩu"></p>
                <p class="remember_me">
                    <label>
                        <input type="checkbox" name="remember_me" id="remember_me">
                        Ghi nhớ tài khoản
                    </label>
                </p>
                <p class="submit_login"><input type="submit" name="commit" value="Login"></p>
            </form>
        </div>
    </section>

</div>
